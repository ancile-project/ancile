<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

<h2>Create policy for app:  <%= @app %></h2>

  <%= label f, :user_id %>
  <%= select f, :user_id, @users %>
  <!--<%= error_tag f, :user_id %>-->

  <%= label f, :purpose %>
  <%= text_input f, :purpose %>
  <%= error_tag f, :purpose %>

  <%= label f, :policy %>
  <%= text_input f, :policy %>
  <%= error_tag f, :policy %>



  <%= label f, :active %>
  <%= checkbox f, :active %>
  <%= error_tag f, :active %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
